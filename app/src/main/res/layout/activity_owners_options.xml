<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".owners_options">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_image"
        android:scaleType="centerCrop"
        android:id="@+id/imageview"
        android:alpha="0.4"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant_name"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="35dp"
        android:layout_marginTop="40dp"
        android:text="Restaurant Name"
        android:textAlignment="center"
        android:textColor="#000000"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/restaurant_name"
        android:hint="View MenuList"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/menulist"
        android:background="#d3d3d3"
        android:textColorHint="#000000"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:hint="Add FoodItem"
        android:textSize="20dp"
        android:id="@+id/additem"
        android:layout_below="@+id/menulist"
        android:background="#d3d3d3"
        android:textColorHint="#000000"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:hint="View Myprofile"
        android:textSize="20dp"
        android:id="@+id/myprofile"
        android:layout_below="@+id/additem"
        android:background="#d3d3d3"
        android:textColorHint="#000000"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:hint="Sign Out"
        android:textSize="20dp"
        android:id="@+id/signout"
        android:layout_below="@+id/myprofile"
        android:background="#d3d3d3"
        android:textColorHint="#000000"
        />


</RelativeLayout>